{
  "manifest_version": 2,
  "name": "Floccus (ownCloud Sync for Chrome/Firefox)",
  "short_name": "Floccus",
  "version": "1.0.0",
  "description": "Sync your Firefox/Chrome with ownCloud (currently only bookmarks; more to come)",
  "icons": {
    "48": "icons/logo.png"
  },

  "applications": {
    "gecko": {
      "id": "floccus@handmadeideas.org",
      "strict_min_version": "48.0"
    }
  },

 "permissions": [
    "https://*/*"
  , "alarms"
  , "bookmarks"
  , "storage"
  ],

  "options_ui": {
    "page": "src/options.html"
  },

  "background": {
    "page": "src/background.html"
  }
}
