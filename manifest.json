{
  "manifest_version": 2,
  "name": "floccus",
  "short_name": "floccus",
  "version": "3.1.8",
  "description":
    "Sync your bookmarks with your selfhosted server (e.g. Nextcloud)",
  "icons": {
    "48": "icons/logo.png",
    "64": "icons/logo_64.png",
    "128": "icons/logo_128.png"
  },

  "applications": {
    "gecko": {
      "id": "floccus@handmadeideas.org",
      "strict_min_version": "57.0"
    }
  },

  "permissions": ["https://*/", "http://*/", "alarms", "bookmarks", "storage"],

  "options_ui": {
    "page": "dist/html/options.html"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/logo.png"
    },
    "default_title": "Open Floccus options",
    "default_popup": "dist/html/options.html"
  },

  "background": {
    "page": "dist/html/background.html"
  }
}
